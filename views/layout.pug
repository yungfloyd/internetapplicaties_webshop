doctype html
html(lang=nl)
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")

    title=title
    link(rel="icon" href="images/favicon.ico" type="image/png" sizes="16x16")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css', integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2', crossorigin='anonymous')
      
  body
    header
      nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        a(href="/").navbar-brand Sportkledij
        
        button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav
            li.nav-item
              a(href="/shirts").nav-link Shirts
            li.nav-item
              a(href="/shorts").nav-link Shorts
            li.nav-item
              a(href="/sokken").nav-link Sokken
            li.nav-item
              a(href="/trainings").nav-link Trainings
            li.nav-item
              a(href='/contact').nav-link Contact
            li
              a(href='/winkelwagen').nav-link
                i.fas.fa-shopping-cart.fa-x
            
          ul.navbar-nav.navbar-right.ml-auto
            li.nav-item
            if(!user)
              a(href="/login").btn.btn-outline-success Login
            if(user)
              span.nav-link Hallo, #{user.username}
              a(href="logout").btn.btn-outline-success Logout

    block content
    
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    script(src="javascripts/script.js")
    //Font Awesome
    script(src="https://kit.fontawesome.com/569017d17c.js" crossorigin="anonymous")
    
    //Bootstrap
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx", crossorigin="anonymous")

