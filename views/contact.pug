extends layout

block content
    div.container
        div.row.contact_row
            div.col-sm
                h3 Contactinfo
                ul.list-unstyled(style="margin-left: 25px;")
                    li Sportkledij
                    li Koestraat 20
                    li 8800 Rumbeke
                    li
                        a(href="tel:+32479000001") +32 479 00 00 01
                    li 
                        a(href="mailto:info@webshop.iets") info@sportkledij.tk
                h3 Openingsuren
                table.table-bordered.table-sm
                    tbody
                        tr
                            th.font-weight-normal Maandag
                            th.font-weight-normal 10u00 - 12u00 en 12u30 - 17u00
                        tr
                            th.font-weight-normal Dinsdag
                            th.font-weight-normal 10u00 - 12u00 en 12u30 - 17u00
                        tr
                            th.font-weight-normal Woensdag
                            th.font-weight-normal 10u00 - 12u00
                        tr
                            th.font-weight-normal Donderdag
                            th.font-weight-normal 10u00 - 12u00 en 12u30 - 17u00
                        tr
                            th.font-weight-normal Vrijdag
                            th.font-weight-normal 10u00 - 12u00 en 12u30 - 17u00
                        tr
                            th.font-weight-normal Weekend
                            th.font-weight-normal Gesloten

            div.col-sm#contactText
                h3 Hebt u een vraag of wenst u meer informatie?
                p Aarzel niet om ons te contacteren
                form(role="form" action="/contact" method="POST")#contactformulier
                    div.form-group
                        label Naam
                        input(type="text" name="naam").form-control
                    div.form-group
                        label E-mail
                        input(type="mail" name="email" autocomplete="email").form-control
                    div.form-group
                        label Uw vraag
                        textarea(cols="40" rows="4" name="vraag").form-control
                    input(type="submit" onclick='' value="Verzend" focus).btn.btn-primary
        div.row
